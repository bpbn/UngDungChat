<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ListMemberActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/members_group_chat_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.PopupTheme"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_member"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/members_group_chat_bar_layout"
        android:layout_marginBottom="6dp"/>

</RelativeLayout>